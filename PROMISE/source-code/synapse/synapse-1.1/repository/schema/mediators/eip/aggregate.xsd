<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified"
           targetNamespace="http://ws.apache.org/ns/synapse"
           xmlns="http://ws.apache.org/ns/synapse">

    <xs:include schemaLocation="../mediators.xsd"/>

    <xs:element name="aggregate">
        <xs:annotation>
            <xs:documentation source="description">
                Aggregate mediator to aggregate a set of messages over a given xpath or
                a set of messages which are previously iterated or cloned
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:choice maxOccurs="3" minOccurs="1">
                <xs:element name="correlateOn" minOccurs="0" maxOccurs="1">
                    <xs:complexType>
                        <xs:attribute name="expression" type="xs:string" use="required"/>
                    </xs:complexType>
                </xs:element>
                <xs:element name="completeCondition" minOccurs="0" maxOccurs="1">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="messageCount" minOccurs="1" maxOccurs="1">
                                <xs:complexType>
                                    <xs:attribute name="min" type="xs:int" use="optional"/>
                                    <xs:attribute name="max" type="xs:int" use="optional"/>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                        <xs:attribute name="timeout" type="xs:long" use="optional"/>
                    </xs:complexType>
                </xs:element>
                <xs:element name="onComplete" minOccurs="1" maxOccurs="1">
                    <xs:complexType>
                        <xs:group ref="mediatorList"/>
                        <xs:attribute name="expression" type="xs:string" use="optional"/>
                    </xs:complexType>
                </xs:element>
            </xs:choice>
        </xs:complexType>
    </xs:element>

</xs:schema>