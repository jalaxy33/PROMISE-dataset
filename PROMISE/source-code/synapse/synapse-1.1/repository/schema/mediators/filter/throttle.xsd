<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified"
           targetNamespace="http://ws.apache.org/ns/synapse"
           xmlns="http://ws.apache.org/ns/synapse">

    <xs:include schemaLocation="../mediators.xsd"/>

    <xs:element name="throttle">
        <xs:annotation>
            <xs:documentation source="description">
                Throttle mediator to throttle the message
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:all>
                <xs:element name="policy" minOccurs="0" maxOccurs="1">
                    <xs:complexType>
                        <xs:all>
                            <xs:element ref="wsp:Policy" xmlns:wsp="http://schemas.xmlsoap.org/ws/2004/09/policy" minOccurs="1" maxOccurs="1"/>
                        </xs:all>
                        <xs:attribute name="key" type="xs:string" use="optional"/>
                    </xs:complexType>
                </xs:element>
                <xs:element name="onAccept" minOccurs="0" maxOccurs="1">
                    <xs:complexType>
                        <xs:group ref="mediatorList" minOccurs="0" maxOccurs="unbounded"/>
                    </xs:complexType>
                </xs:element>
                <xs:element name="onReject" minOccurs="0" maxOccurs="1">
                    <xs:complexType>
                        <xs:group ref="mediatorList" minOccurs="0" maxOccurs="unbounded"/>
                    </xs:complexType>
                </xs:element>
            </xs:all>
            <xs:attribute name="id" type="xs:string" use="required"/>
            <xs:attribute name="onAccept" type="xs:string" use="optional"/>
            <xs:attribute name="onReject" type="xs:string" use="optional"/>
        </xs:complexType>
    </xs:element>

</xs:schema>