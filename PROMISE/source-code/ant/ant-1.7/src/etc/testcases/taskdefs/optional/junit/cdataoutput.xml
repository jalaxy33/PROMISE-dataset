<project basedir=".">
  <target name="run-junit">
    <junit fork="true">
      <classpath path="${tests-classpath.value}"/>
      <sysproperty key="cdata.inner" value="true"/>
      <test
        name="org.apache.tools.ant.taskdefs.optional.junit.XMLFormatterWithCDATAOnSystemOut"/>
      <formatter type="xml"/>
    </junit>
  </target>
</project>